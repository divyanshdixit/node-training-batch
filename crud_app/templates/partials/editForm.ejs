<form action="/student/update" method="post">
  <input type="hidden" id="object_id" name="std_objid" value="<%=data._id%>"/>
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" name="name" placeholder="Full Name" value="<%= data.name %>">
        </div>
    </div>
    <div class="form-group row">
      <label for="email" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="<%= data.email %>">
      </div>
    </div>
    <div class="form-group row">
      <label for="city" class="col-sm-2 col-form-label">City</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="city" name="city" placeholder="City Name" value="<%= data.city %>">
      </div>
    </div>

    <div class="form-group row">
        <label for="student_id" class="col-sm-2 col-form-label">Student Id</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="student_id" name="std_id" placeholder="Student ID" value="<%= data.id %>">
        </div>
    </div>

    <div class="form-group row">
        <label for="standard" class="col-sm-2 col-form-label">Standard</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="standard" name="standard" placeholder="Standard" value="<%= data.standard %>">
        </div>
    </div>
    
    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Edit Record </button>
        <button type="button" class="cancel btn btn-danger"> Cancel </button>
      </div>
    </div>
  </form>