<form action="/student" method="post">
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" name="name" placeholder="Full Name">
        </div>
    </div>
    <div class="form-group row">
      <label for="email" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" id="email" name="email" placeholder="Email">
      </div>
    </div>
    <div class="form-group row">
      <label for="city" class="col-sm-2 col-form-label">City</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="city" name="city" placeholder="City Name">
      </div>
    </div>

    <div class="form-group row">
        <label for="student_id" class="col-sm-2 col-form-label">Student Id</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="student_id" name="std_id" placeholder="Student ID">
        </div>
    </div>

    <div class="form-group row">
        <label for="standard" class="col-sm-2 col-form-label">Standard</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="standard" name="standard" placeholder="Standard">
        </div>
    </div>
    
    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Edit Record </button>
      </div>
    </div>
  </form>